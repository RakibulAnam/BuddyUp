<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.buddyup">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BuddyUp"
        tools:targetApi="31">
        <activity
            android:name=".controller.TopicActivity"
            android:exported="false" />
        <activity
            android:name=".controller.SuggestionActivity"
            android:exported="false" />
        <activity
            android:name=".controller.AcceptRequestActivity"
            android:exported="false" />
        <activity
            android:name=".controller.WaitingActivity"
            android:exported="false" />
        <activity
            android:name=".controller.HangoutListActvity"
            android:exported="false" />
        <activity
            android:name=".controller.HangoutAvtivity"
            android:exported="false" />
        <activity
            android:name=".controller.ProfileActivity"
            android:exported="false" />
        <activity
            android:name=".controller.RegisterUserActivity"
            android:exported="false" />
        <activity
            android:name=".controller.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>